<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Title</title>

</head>
<body>

<%if flash[:notice] %>
  <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
<%end %>

<div class="container">
  <div class="table-responsive">
    <table id="example" class="table table-dark table-striped">
      <!-- Cabeçalho da tabela -->
      <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Quantidade</th>
        <th>Marca</th>
        <th>Gerenciamento</th>
      </tr>
      </thead>
      <!-- Corpo da tabela -->
      <tbody>
      <% @produto.each do |produtos| %>
        <tr>
          <td><%= produtos.id %></td>
          <td><%= produtos.nome %></td>
          <td><%= produtos.descricao %></td>
          <td>R$ <%= produtos.preco %></td>
          <td><%= produtos.quantidade %></td>
          <td><%= produtos.marca %></td>
          <td>
            <a href="#"><img src="<%= asset_path('edit.png') %>" width="30px" height="30px" /></a>
            &emsp;&emsp;
            <%= link_to image_tag('excluir.png', style: 'width:30px;height:30px'), produtos, method: :delete, data: { confirm: "Excluir produto?" } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

</body>

</html>