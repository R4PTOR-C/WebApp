





<html>
<head>
  <meta charset="UTF-8">
  <title>Thunder</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.cdnfonts.com/css/gobold" rel="stylesheet">
  <link rel="stylesheet" href="stylePagInicial.css">
  <link rel="shortcut icon" href="Images/4037560.png" type="image/x-icon">

</head>
<style>



</style>

<body>
<div class="campoProdutos">






  <br> <h1>DESTAQUES</h1>
  <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="carousel" >
    <div class="carousel-inner">

      <% @produto.each_slice(4).with_index do |produtos_slice, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">

          <div class="container-sm">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
              <% produtos_slice.each do |produto| %>

                <div class="col">
                  <%= link_to produto_path(produto), class: "card-link" do %>
                    <div class="card h-100">
                      <% if produto.imagem.attached? %>
                        <%= image_tag produto.imagem, class: "card-img-top" %>
                      <% else %>
                        <%= image_tag "mouse_pequeno.png", class: "card-img-top" %>
                      <% end %>
                      <div class="card-body">
                        <p class="card-title"><%=produto.nome %></p>
                        <p class="card-text">DESCRIÇÃO</p>
                        <p class="card-text">R$<%= produto.preco %></p>
                        <button class="buy">comprar</button>
                      </div>
                    </div>
                  <%end %>
                </div>
              <% end %>
            </div>

          </div>

        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>


  <br>
  <br>
  <br>

  <h1>LOGITECH</h1>


  <div class="container-sm">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
      <% @produto.where(marca: 'LOGITECH').each do |produto| %>
        <div class="col">
          <%= link_to produto_path(produto), class: "card-link" do %>
            <div class="card h-100">
              <% if produto.imagem.attached? %>
                <%= image_tag produto.imagem, class: "card-img-top" %>
              <% else %>
                <%= image_tag "mouse_pequeno.png", class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <p class="card-title"><%=produto.nome %></p>
                <p class="card-text">DESCRIÇÃO</p>
                <p class="card-text">R$<%= produto.preco %></p>
                <button class="buy"> comprar </button>
              </div>
            </div>
          <%end %>
        </div>
      <% end %>

    </div>
  </div>

  <br>

</div>



</body>
</html>